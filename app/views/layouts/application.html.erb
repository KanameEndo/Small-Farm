<!DOCTYPE html>
<html>
  <head>
    <title>SmallFarm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%# <%= link_to "新規登録", foods_path %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= search_form_for @q do |f| %>
      <%= f.label :item_name_or_variety_or_comment_or_storage_method_or_harvest_or_price_or_stock_cont, "Keyword" %>
      <%= f.search_field :item_name_or_variety_or_comment_or_storage_method_or_harvest_or_price_or_stock_cont %>

      <%= f.submit "検索" %>
      <% end %>
    <%= yield %>
  </body>
</html>

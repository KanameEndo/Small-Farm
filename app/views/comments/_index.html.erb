<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <div class="icon_container">
          <p class="icon"><%= link_to edit_plan_comment_path(plan, comment), remote: true do %><i class="fa-solid fa-pencil"></i><% end %></p>
          <p class="icon"><%= link_to plan_comment_path(comment.plan_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"}  do %><i class="fa-regular fa-trash-can"></i><% end %></p>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>
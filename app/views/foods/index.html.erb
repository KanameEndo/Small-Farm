<%= search_form_for @q do |f| %>
  <%= f.label :name_cont, "Keyword" %>
  <%= f.search_field :name_cont %>

  <%= f.submit "検索" %>
<% end %>

<h1>Foods</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Variety</th>
      <th>Comment</th>
      <th>Storage method</th>
      <th>Harvest</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.item_name %></td>
        <td><%= food.variety %></td>
        <td><%= food.comment %></td>
        <td><%= food.storage_method %></td>
        <td><%= food.harvest %></td>
        <td><%= food.price %></td>
        <td><%= food.stock %></td>
        <td><%= food.image %></td>
        <td><%= link_to 'Show', food %></td>
        <%# <% if current_user.admin %>
          <td><%= link_to 'Edit', edit_food_path(food) %></td>
          <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <%# <% end %>
    <% end %>
  </tbody>
</table>


<%= form_with(model: food, local: true) do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field field-input">
    <%= form.label :item_name %>
    <%= form.text_field :item_name %>
  </div>

  <div class="field field-input">
    <%= form.label :variety %>
    <%= form.text_field :variety %>
  </div>

  <div class="field field-input">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="field field-input">
    <%= form.label :storage_method %>
    <%= form.text_field :storage_method %>
  </div>

  <div class="field field-input">
    <%= form.label :harvest %>
    <%= form.text_field :harvest %>
  </div>

  <div class="field field-input">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field field-input">
    <%= form.label :stock %>
    <%= form.number_field :stock %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
    <%# <%= image_tag @food.image.url if @food.image.present? %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

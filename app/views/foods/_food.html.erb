<td><%= food.item_name %></td>
<% if current_user.favorited_by?(food.id) >
  <td>
    <%= link_to destroy_favorite_path(food), class: "favorite-link", method: :DELETE, remote: true do %>
      <i class="fa fa-heart unlike-btn"></i>
    <% end %>
    <%= food.favorite.count %>
  </td>
<% else %>
  <td>
    <%= link_to create_favorite_path(food), class: "favorite-link", method: :POST, remote: true do %>
      <i class="fa fa-heart like-btn"></i>
    <% end %>
    <%= food.favorite.count %>
  </td>
<% end %>
<d><%= link_to 'Show', food %></d>
<td><%= link_to 'Edit', edit_favorite_path(food) %><td>
<td><%= link_to 'Destroy', food, metod: :delete, data: { confirm: 'Are you sure?' } %></td>

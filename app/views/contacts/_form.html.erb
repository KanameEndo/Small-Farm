      </ul>
    </div>
  <% end %>
<h3 class="contact">お問い合わせ</h3>
  <dl>
    <dt><%= form.label :お名前 %></dt>
    <dd class="form-contact"><%= form.text_field :name %></dd>
  </dl>
  <dl>
    <dt><%= form.label :メールアドレス %></dt>
    <dd class="form-contact"><%= form.text_field :email %></dd>
  </dl>
  <dl>
    <dt><%= form.label :お問い合わせ内容 %></dt>
    <dd class="form-contact"><%= form.text_area :message %></dd>
  </dl>

<div class="actions">
  <%= form.submit  "送信" %>
</div>
<% end %>

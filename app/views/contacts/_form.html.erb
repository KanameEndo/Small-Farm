  <tr>
    <th><%= form.label :メールアドレス %></th>
    <td><%= form.text_field :email %></td>
  </tr>
  <tr>
    <th><%= form.label :お問い合わせ内容 %></th>
    <td><%= form.text_area :message %></td>
  </tr>
